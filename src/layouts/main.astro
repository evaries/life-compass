---
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'
import '../styles/global.css'
import '@fontsource-variable/montserrat'
import ScrollButton from '../components/scroll-button.astro'
// const socialImageURL = new URL('/social-card.png', Astro.url).href
const socialImageURL = 'https://life-compass.netlify.app/social-card.png'
// const canonicalURL = new URL(Astro.url.pathname, Astro.url)
const canonicalURL = 'https://life-compass.netlify.app'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Find Your North Star in Life: A Guide to Purpose & Vision</title>
		<meta
			name="description"
			content="Discover how to find your purpose, create a vision, and build the lifestyle you dream of with this comprehensive guide."
		/>
		<meta
			name="keywords"
			content="astrology, purpose, vision, life guide, self-improvement, personal development"
		/>
		<meta name="author" content="Yevhenii Nadtochii" />
		<meta name="robots" content="index, follow" />
		<meta name="image" content="https://life-compass.netlify.app/social-card.png" />

		<!-- Open Graph / Facebook -->
		<meta name="og:type" content="website" />
		<meta name="og:title" content="Find Your North Star in Life: A Guide to Purpose & Vision" />
		<meta
			name="og:description"
			content="Discover how to find your purpose, create a vision, and build the lifestyle you dream of with this comprehensive guide."
		/>
		<meta name="og:url" content={canonicalURL} />
		<meta name="og:site_name" content="/" />
		<meta name="og:locale" content="en" />
		<meta name="og:image" content={socialImageURL} />
		<meta name="og:image:width" content="1200" />
		<meta name="og:image:height" content="630" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta
			name="twitter:title"
			content="Find Your North Star in Life: A Guide to Purpose & Vision"
		/>
		<meta
			name="twitter:description"
			content="Discover how to find your purpose, create a vision, and build the lifestyle you dream of with this comprehensive guide."
		/>
		<meta name="twitter:site" content="https://life-compass.netlify.app" />
		<meta name="twitter:creator" content="@yev_henii" />
		<meta name="twitter:image" content="https://life-compass.netlify.app/social-card.png" />
		<script
			type="text/partytown"
			async
			src="https://www.googletagmanager.com/gtag/js?id=G-8YFT1LE5JR"></script>
		<script type="text/partytown">
			window.dataLayer = window.dataLayer || []
			function gtag() {
				dataLayer.push(arguments)
			}
			gtag('js', new Date())

			gtag('config', 'G-8YFT1LE5JR')
		</script>
	</head>
	<body>
		<Header />
		<slot />
		<ScrollButton />
		<Footer />
	</body>
</html>
